<%= form_with model: @reserva, url: evento_reservas_path(@evento), local: true, class: "bootstrap-form" do |f| %>
  <div class="form-group">
    <%= f.label :nombre %>
    <%= f.text_field :nombre, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :correo %>
    <%= f.email_field :correo, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :curp %>
    <%= f.text_field :curp, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Registrar', class: "btn btn-primary btn-sm mt-2" %>
  </div>
<% end %>
